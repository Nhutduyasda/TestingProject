@model MyProject.Models.Shared.Supplier

@{
    ViewData["Title"] = "Chỉnh sửa nhà cung cấp";
}

<div class="mb-6">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fas fa-arrow-left"></i>
        <span>Quay lại danh sách</span>
    </a>
</div>

<div class="max-w-3xl">
    <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Chỉnh sửa nhà cung cấp</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Cập nhật thông tin nhà cung cấp #@Model.SupplierId</p>
        </div>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="p-4 mb-6 text-red-800 bg-red-100 border border-red-200 rounded-lg dark:bg-red-900/20 dark:border-red-800 dark:text-red-400"></div>
            
            <input type="hidden" asp-for="SupplierId" />

            <div class="space-y-6">
                <!-- Supplier Name -->
                <div>
                    <label asp-for="SupplierName" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                        Tên nhà cung cấp <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="SupplierName" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                           placeholder="Nhập tên nhà cung cấp">
                    <span asp-validation-for="SupplierName" class="mt-1 text-sm text-red-600"></span>
                </div>

                <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                            Email
                        </label>
                        <input asp-for="Email" type="email"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                               placeholder="email@example.com">
                        <span asp-validation-for="Email" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <!-- Phone -->
                    <div>
                        <label asp-for="Phone" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                            Số điện thoại
                        </label>
                        <input asp-for="Phone" type="tel"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                               placeholder="0123456789">
                        <span asp-validation-for="Phone" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <!-- Address -->
                <div>
                    <label asp-for="Address" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                        Địa chỉ
                    </label>
                    <textarea asp-for="Address" rows="3"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                              placeholder="Nhập địa chỉ nhà cung cấp"></textarea>
                    <span asp-validation-for="Address" class="mt-1 text-sm text-red-600"></span>
                </div>

                <!-- Stats -->
                <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-800/50">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-900 dark:text-white">Số sản phẩm hiện tại</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Nhà cung cấp này đang cung cấp</p>
                        </div>
                        <span class="px-3 py-1 text-lg font-bold text-purple-800 bg-purple-100 rounded-full dark:bg-purple-900/20 dark:text-purple-400">
                            @(Model.Products?.Count ?? 0)
                        </span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <button type="submit" 
                            class="flex items-center gap-2 px-6 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                        <i class="fas fa-save"></i>
                        <span>Cập nhật</span>
                    </button>
                    <a asp-action="Index" 
                       class="flex items-center gap-2 px-6 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        <i class="fas fa-times"></i>
                        <span>Hủy</span>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModernValidationScripts");}
}
