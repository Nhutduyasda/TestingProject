@model MyProject.Models.Shared.Supplier

@{
    ViewData["Title"] = "Chi tiết nhà cung cấp";
}

<div class="mb-6">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fas fa-arrow-left"></i>
        <span>Quay lại danh sách</span>
    </a>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Left Sidebar - Supplier Info -->
    <div class="lg:col-span-1">
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <div class="flex flex-col items-center mb-6">
                <div class="flex items-center justify-center w-24 h-24 mb-4 rounded-full bg-brand-100 dark:bg-brand-900/20">
                    <i class="text-5xl fas fa-truck text-brand-600 dark:text-brand-400"></i>
                </div>
                <h2 class="text-xl font-bold text-center text-gray-900 dark:text-white">@Model.SupplierName</h2>
                <span class="inline-block px-3 py-1 mt-2 text-xs font-medium text-gray-600 bg-gray-100 rounded-full dark:bg-gray-800 dark:text-gray-400">
                    ID: #@Model.SupplierId
                </span>
            </div>

            <div class="pt-6 space-y-4 border-t border-gray-200 dark:border-gray-700">
                <!-- Email -->
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <div>
                        <div class="flex items-center gap-2 mb-1">
                            <i class="text-sm fas fa-envelope text-gray-400"></i>
                            <span class="text-xs font-medium text-gray-500 uppercase dark:text-gray-400">Email</span>
                        </div>
                        <a href="mailto:@Model.Email" class="text-sm text-brand-600 hover:underline dark:text-brand-400">
                            @Model.Email
                        </a>
                    </div>
                }

                <!-- Phone -->
                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    <div>
                        <div class="flex items-center gap-2 mb-1">
                            <i class="text-sm fas fa-phone text-gray-400"></i>
                            <span class="text-xs font-medium text-gray-500 uppercase dark:text-gray-400">Số điện thoại</span>
                        </div>
                        <a href="tel:@Model.Phone" class="text-sm text-brand-600 hover:underline dark:text-brand-400">
                            @Model.Phone
                        </a>
                    </div>
                }

                <!-- Address -->
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div>
                        <div class="flex items-center gap-2 mb-1">
                            <i class="text-sm fas fa-map-marker-alt text-gray-400"></i>
                            <span class="text-xs font-medium text-gray-500 uppercase dark:text-gray-400">Địa chỉ</span>
                        </div>
                        <p class="text-sm text-gray-700 dark:text-gray-300">@Model.Address</p>
                    </div>
                }
            </div>

            <!-- Stats -->
            <div class="p-4 mt-6 bg-purple-50 rounded-lg dark:bg-purple-900/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-purple-600 uppercase dark:text-purple-400">Sản phẩm</p>
                        <p class="mt-1 text-2xl font-bold text-purple-900 dark:text-purple-300">@(Model.Products?.Count ?? 0)</p>
                    </div>
                    <i class="text-3xl fas fa-box text-purple-300 dark:text-purple-700"></i>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 space-y-2">
                <a asp-action="Edit" asp-route-id="@Model.SupplierId" 
                   class="flex items-center justify-center w-full gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                    <i class="fas fa-edit"></i>
                    <span>Chỉnh sửa</span>
                </a>
                <a asp-action="Delete" asp-route-id="@Model.SupplierId" 
                   class="flex items-center justify-center w-full gap-2 px-4 py-2 text-red-700 transition-colors bg-red-100 rounded-lg hover:bg-red-200 dark:bg-red-900/20 dark:text-red-400 dark:hover:bg-red-900/40">
                    <i class="fas fa-trash"></i>
                    <span>Xóa nhà cung cấp</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Right Content - Products List -->
    <div class="lg:col-span-2">
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Danh sách sản phẩm</h3>
                @if (Model.Products?.Any() == true)
                {
                    <span class="px-3 py-1 text-sm font-medium text-purple-800 bg-purple-100 rounded-full dark:bg-purple-900/20 dark:text-purple-400">
                        @Model.Products.Count sản phẩm
                    </span>
                }
            </div>

            @if (Model.Products?.Any() == true)
            {
                <div class="space-y-3">
                    @foreach (var product in Model.Products)
                    {
                        <div class="flex items-center gap-4 p-4 transition-colors border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800/50">
                            <!-- Product Image -->
                            <div class="flex-shrink-0 w-16 h-16 overflow-hidden bg-gray-100 rounded-lg dark:bg-gray-800">
                                @if (product.Images?.Any() == true)
                                {
                                    <img src="@product.Images.First().ImageUrl" alt="@product.ProductName" class="object-cover w-full h-full">
                                }
                                else
                                {
                                    <div class="flex items-center justify-center w-full h-full">
                                        <i class="text-2xl text-gray-400 fas fa-box"></i>
                                    </div>
                                }
                            </div>

                            <!-- Product Info -->
                            <div class="flex-1 min-w-0">
                                <h4 class="font-medium text-gray-900 truncate dark:text-white">
                                    @product.ProductName
                                </h4>
                                <div class="flex items-center gap-3 mt-1 text-sm text-gray-500 dark:text-gray-400">
                                    <span class="flex items-center gap-1">
                                        <i class="text-xs fas fa-tag"></i>
                                        @product.Category?.CategoryName
                                    </span>
                                    @if (product.Variants?.Any() == true)
                                    {
                                        var totalStock = product.Variants.Sum(v => v.Quanlity);
                                        <span class="flex items-center gap-1">
                                            <i class="text-xs fas fa-cubes"></i>
                                            @product.Variants.Count biến thể
                                        </span>
                                        <span class="flex items-center gap-1">
                                            <i class="text-xs fas fa-warehouse"></i>
                                            Tồn kho: @totalStock
                                        </span>
                                    }
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center gap-2">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" 
                                   class="px-3 py-1 text-sm text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" 
                                   class="px-3 py-1 text-sm text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="py-12 text-center">
                    <div class="flex justify-center mb-4">
                        <div class="flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 dark:bg-gray-800">
                            <i class="text-4xl text-gray-400 fas fa-box-open"></i>
                        </div>
                    </div>
                    <h3 class="mb-2 text-lg font-medium text-gray-900 dark:text-white">Chưa có sản phẩm</h3>
                    <p class="mb-6 text-sm text-gray-500 dark:text-gray-400">
                        Nhà cung cấp này chưa có sản phẩm nào
                    </p>
                    <a asp-controller="Product" asp-action="Create" 
                       class="inline-flex items-center gap-2 px-6 py-3 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                        <i class="fas fa-plus"></i>
                        <span>Thêm sản phẩm mới</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
