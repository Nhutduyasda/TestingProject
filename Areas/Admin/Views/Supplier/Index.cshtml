@model IEnumerable<MyProject.Models.Shared.Supplier>

@{
    ViewData["Title"] = "Quản lý nhà cung cấp";
}

<div class="mb-6">
    <div class="flex flex-col items-start justify-between gap-4 sm:flex-row sm:items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Quản lý nhà cung cấp</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Danh sách tất cả nhà cung cấp</p>
        </div>
        <a asp-action="Create" class="flex items-center gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
            <i class="fas fa-plus"></i>
            <span>Thêm nhà cung cấp</span>
        </a>
    </div>
</div>

<!-- Search -->
<div class="p-4 mb-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
    <form method="get" class="flex gap-2">
        <input type="text" name="searchTerm" value="@ViewData["SearchTerm"]" 
               placeholder="Tìm theo tên, email, số điện thoại..."
               class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white">
        <button type="submit" class="flex items-center gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
            <i class="fas fa-search"></i>
            <span>Tìm kiếm</span>
        </button>
        <a asp-action="Index" class="flex items-center justify-center px-4 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
            <i class="fas fa-redo"></i>
        </a>
    </form>
</div>

<!-- Suppliers Table -->
<div class="overflow-hidden bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-700 dark:text-gray-300">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-800 dark:text-gray-400">
                <tr>
                    <th class="px-6 py-4">ID</th>
                    <th class="px-6 py-4">Tên nhà cung cấp</th>
                    <th class="px-6 py-4">Liên hệ</th>
                    <th class="px-6 py-4">Địa chỉ</th>
                    <th class="px-6 py-4">Số sản phẩm</th>
                    <th class="px-6 py-4 text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    @foreach (var supplier in Model)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                            <td class="px-6 py-4 font-medium">
                                #@supplier.SupplierId
                            </td>
                            <td class="px-6 py-4">
                                <div>
                                    <p class="font-medium text-gray-900 dark:text-white">@supplier.SupplierName</p>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="space-y-1">
                                    @if (!string.IsNullOrEmpty(supplier.Email))
                                    {
                                        <div class="flex items-center gap-2 text-xs">
                                            <i class="fas fa-envelope text-gray-400"></i>
                                            <span>@supplier.Email</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(supplier.Phone))
                                    {
                                        <div class="flex items-center gap-2 text-xs">
                                            <i class="fas fa-phone text-gray-400"></i>
                                            <span>@supplier.Phone</span>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-xs text-gray-600 dark:text-gray-400">
                                    @(string.IsNullOrEmpty(supplier.Address) ? "N/A" : 
                                      (supplier.Address.Length > 40 ? supplier.Address.Substring(0, 40) + "..." : supplier.Address))
                                </p>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="px-2 py-1 text-xs font-medium text-purple-800 bg-purple-100 rounded-full dark:bg-purple-900/20 dark:text-purple-400">
                                    @(supplier.Products?.Count ?? 0)
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-center gap-2">
                                    <a asp-action="Details" asp-route-id="@supplier.SupplierId" 
                                       class="p-2 text-blue-600 transition-colors rounded-lg hover:bg-blue-50 dark:text-blue-400 dark:hover:bg-blue-900/20"
                                       title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@supplier.SupplierId" 
                                       class="p-2 text-green-600 transition-colors rounded-lg hover:bg-green-50 dark:text-green-400 dark:hover:bg-green-900/20"
                                       title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@supplier.SupplierId" 
                                       class="p-2 text-red-600 transition-colors rounded-lg hover:bg-red-50 dark:text-red-400 dark:hover:bg-red-900/20"
                                       title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center justify-center">
                                <i class="mb-3 text-5xl text-gray-300 fas fa-truck dark:text-gray-600"></i>
                                <p class="text-gray-500 dark:text-gray-400">Không tìm thấy nhà cung cấp nào</p>
                                <a asp-action="Create" class="mt-4 text-brand-600 hover:text-brand-700 dark:text-brand-400">
                                    <i class="fas fa-plus mr-1"></i> Thêm nhà cung cấp mới
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model?.Any() == true)
{
    <div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
        Hiển thị <strong>@Model.Count()</strong> nhà cung cấp
    </div>
}
