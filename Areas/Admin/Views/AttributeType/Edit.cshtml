@model MyProject.Models.Shared.AttributeType

@{
    ViewData["Title"] = "Sửa loại thuộc tính";
}

<div class="mb-6">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fas fa-arrow-left"></i>
        <span>Quay lại danh sách</span>
    </a>
</div>

<div class="max-w-2xl">
    <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Sửa loại thuộc tính</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Cập nhật thông tin loại thuộc tính: @Model.Name
            </p>
        </div>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="p-4 mb-6 border-l-4 border-red-500 rounded-lg bg-red-50 dark:bg-red-900/20"></div>
            
            <input type="hidden" asp-for="AttributeTypeId" />
            
            <div class="space-y-6">
                <!-- Name -->
                <div>
                    <label asp-for="Name" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                        Tên loại thuộc tính <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Name" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                           placeholder="VD: Size, Color, Weight, Material">
                    <span asp-validation-for="Name" class="mt-1 text-sm text-red-600"></span>
                </div>

                <!-- Description -->
                <div>
                    <label asp-for="Description" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                        Mô tả
                    </label>
                    <textarea asp-for="Description" rows="3"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                              placeholder="Mô tả chi tiết về loại thuộc tính này"></textarea>
                    <span asp-validation-for="Description" class="mt-1 text-sm text-red-600"></span>
                </div>

                <!-- Display Order -->
                <div>
                    <label asp-for="DisplayOrder" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                        Thứ tự hiển thị
                    </label>
                    <input asp-for="DisplayOrder" type="number" min="0"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                           placeholder="Số càng nhỏ hiển thị càng trước">
                    <span asp-validation-for="DisplayOrder" class="mt-1 text-sm text-red-600"></span>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Số càng nhỏ sẽ hiển thị trước (0 = ưu tiên cao nhất)</p>
                </div>

                <!-- IsActive -->
                <div class="flex items-start gap-3">
                    <input asp-for="IsActive" type="checkbox"
                           class="w-4 h-4 border-gray-300 rounded text-brand-600 focus:ring-brand-500 dark:border-gray-700 dark:bg-gray-800">
                    <div class="flex-1">
                        <label asp-for="IsActive" class="text-sm font-medium text-gray-700 dark:text-gray-300">
                            Kích hoạt
                        </label>
                        <p class="text-xs text-gray-500 dark:text-gray-400">
                            Chỉ các loại thuộc tính đang hoạt động mới hiển thị khi tạo/sửa biến thể
                        </p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <button type="submit" 
                            class="flex items-center gap-2 px-6 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                        <i class="fas fa-save"></i>
                        <span>Cập nhật</span>
                    </button>
                    <a asp-action="Index"
                       class="flex items-center gap-2 px-6 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        <i class="fas fa-times"></i>
                        <span>Hủy</span>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModernValidationScripts");}
}
