@model IEnumerable<MyProject.Models.Shared.Combo>

@{
    ViewData["Title"] = "Quản lý Combo";
}

<div class="flex flex-col gap-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Danh sách Combo</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">Quản lý các gói combo sản phẩm khuyến mãi</p>
        </div>
        <a asp-action="Create" class="flex items-center gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
            <i class="fas fa-plus"></i>
            <span>Tạo Combo mới</span>
        </a>
    </div>

    <!-- Table Card -->
    <div class="bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-900 dark:border-gray-800">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Hình ảnh</th>
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Tên Combo</th>
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Danh mục</th>
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Giá bán</th>
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Giá gốc</th>
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Giảm giá</th>
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Trạng thái</th>
                        <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase dark:text-gray-400">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-800">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
                            <td class="px-6 py-4">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="@item.ComboName" class="object-cover w-12 h-12 rounded-lg border border-gray-200 dark:border-gray-700" />
                                }
                                else
                                {
                                    <div class="flex items-center justify-center w-12 h-12 bg-gray-100 rounded-lg dark:bg-gray-800 text-gray-400">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </td>
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@item.ComboName</td>
                            <td class="px-6 py-4 text-gray-600 dark:text-gray-300">@item.Category?.CategoryName</td>
                            <td class="px-6 py-4 font-medium text-brand-600 dark:text-brand-400">@item.Price.ToString("C0")</td>
                            <td class="px-6 py-4 text-gray-500 line-through dark:text-gray-500">@(item.OriginalPrice?.ToString("C0") ?? "N/A")</td>
                            <td class="px-6 py-4">
                                @if (item.OriginalPrice.HasValue && item.OriginalPrice > 0)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400">
                                        -@item.DiscountPercentage.ToString("0")%
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (item.IsActive)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
                                        <span class="w-1.5 h-1.5 mr-1.5 bg-green-600 rounded-full"></span>
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-400">
                                        <span class="w-1.5 h-1.5 mr-1.5 bg-gray-500 rounded-full"></span>
                                        Ngừng bán
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.ComboId" class="p-2 text-blue-600 transition-colors rounded-lg hover:bg-blue-50 dark:text-blue-400 dark:hover:bg-blue-900/20" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.ComboId" method="post" class="inline-block" onsubmit="return confirm('Bạn có chắc chắn muốn xóa combo này?');">
                                        <button type="submit" class="p-2 text-red-600 transition-colors rounded-lg hover:bg-red-50 dark:text-red-400 dark:hover:bg-red-900/20" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="p-8 text-center text-gray-500 dark:text-gray-400">
                <div class="mb-3 text-4xl">
                    <i class="fas fa-box-open"></i>
                </div>
                <p>Chưa có combo nào được tạo.</p>
            </div>
        }
    </div>
</div>
