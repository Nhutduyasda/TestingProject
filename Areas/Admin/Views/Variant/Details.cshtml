@model MyProject.Models.Shared.Variant

@{
    ViewData["Title"] = "Chi tiết biến thể";
    var attributes = ViewBag.VariantAttributes as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<div class="mb-6">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fas fa-arrow-left"></i>
        <span>Quay lại danh sách</span>
    </a>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Variant Info -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <div class="flex items-start gap-6">
                <!-- Product Image -->
                <div class="flex-shrink-0">
                    @if (Model.Product?.Images?.Any() == true)
                    {
                        <img src="@Model.Product.Images.FirstOrDefault()?.ImageUrl" 
                             alt="@Model.VariantName"
                             class="object-cover w-32 h-32 border border-gray-200 rounded-lg dark:border-gray-700">
                    }
                    else
                    {
                        <div class="flex items-center justify-center w-32 h-32 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
                            <i class="text-4xl text-gray-400 fas fa-image"></i>
                        </div>
                    }
                </div>

                <!-- Basic Info -->
                <div class="flex-1">
                    <h1 class="mb-2 text-2xl font-bold text-gray-900 dark:text-white">@Model.VariantName</h1>
                    <p class="mb-4 text-gray-600 dark:text-gray-400">@Model.Product?.ProductName</p>
                    
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Giá bán</p>
                            <p class="text-xl font-bold text-brand-600">@Model.Price.ToString("N0") đ</p>
                        </div>
                    </div>

                    <!-- Stock Status -->
                    <div class="inline-flex items-center gap-2 px-3 py-1 text-sm font-medium rounded-lg
                        @(Model.Quanlity > 50 ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300" :
                          Model.Quanlity > 0 ? "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300" :
                          "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300")">
                        <i class="fas fa-box"></i>
                        <span>@Model.Quanlity sản phẩm</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Attributes -->
        @if (attributes.Any())
        {
            <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
                <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-tag"></i>
                    Thuộc tính
                </h2>
                <div class="grid grid-cols-2 gap-4 md:grid-cols-3">
                    @foreach (var attr in attributes)
                    {
                        <div class="p-4 border border-gray-200 rounded-lg dark:border-gray-700">
                            <p class="mb-1 text-sm text-gray-600 dark:text-gray-400">@attr.Key</p>
                            <p class="font-semibold text-gray-900 dark:text-white">@attr.Value</p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Product Images Gallery -->
        @if (Model.Product?.Images?.Any() == true)
        {
            <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
                <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-images"></i>
                    Hình ảnh sản phẩm
                </h2>
                <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                    @foreach (var image in Model.Product.Images)
                    {
                        <div class="relative overflow-hidden border border-gray-200 rounded-lg group dark:border-gray-700">
                            <img src="@image.ImageUrl" 
                                 alt="Product Image"
                                 class="object-cover w-full transition-transform h-28 group-hover:scale-110">
                            @if (image.IsPrimary)
                            {
                                <span class="absolute px-2 py-1 text-xs font-medium text-white rounded-lg top-2 left-2 bg-brand-600">
                                    <i class="fas fa-star"></i> Chính
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
        <!-- Quick Actions -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Thao tác</h3>
            <div class="space-y-2">
                <a asp-action="Edit" asp-route-id="@Model.VariantId" 
                   class="flex items-center justify-center w-full gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                    <i class="fas fa-edit"></i>
                    Chỉnh sửa
                </a>
                <button onclick="openStockModal()"
                        class="flex items-center justify-center w-full gap-2 px-4 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300">
                    <i class="fas fa-boxes"></i>
                    Cập nhật kho
                </button>
                <a asp-action="Delete" asp-route-id="@Model.VariantId"
                   class="flex items-center justify-center w-full gap-2 px-4 py-2 text-white transition-colors bg-red-600 rounded-lg hover:bg-red-700">
                    <i class="fas fa-trash"></i>
                    Xóa biến thể
                </a>
            </div>
        </div>

        <!-- Stats -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Thống kê</h3>
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600 dark:text-gray-400">Tồn kho</span>
                    <span class="font-semibold text-gray-900 dark:text-white">@Model.Quanlity</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600 dark:text-gray-400">Giá bán</span>
                    <span class="font-semibold text-gray-900 dark:text-white">@Model.Price.ToString("N0") đ</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600 dark:text-gray-400">Giá trị kho</span>
                    <span class="font-bold text-brand-600">@((Model.Quanlity * Model.Price).ToString("N0")) đ</span>
                </div>
            </div>
        </div>

        <!-- Product Info -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Thông tin sản phẩm</h3>
            <div class="space-y-3 text-sm">
                <div>
                    <p class="text-gray-600 dark:text-gray-400">Danh mục</p>
                    <p class="font-medium text-gray-900 dark:text-white">@Model.Product?.Category?.CategoryName</p>
                </div>
                <a asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId"
                   class="flex items-center gap-2 mt-3 font-medium transition-colors text-brand-600 hover:text-brand-700">
                    <span>Xem sản phẩm</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stock Update Modal -->
<div id="stockModal" class="fixed inset-0 z-50 items-center justify-center hidden bg-black bg-opacity-50">
    <div class="w-full max-w-md p-6 mx-4 bg-white rounded-lg dark:bg-gray-900">
        <h3 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">
            <i class="mr-2 fas fa-boxes"></i>
            Cập nhật tồn kho
        </h3>
        <form id="stockForm">
            <input type="hidden" id="variantId" value="@Model.VariantId" />
            <div class="mb-4">
                <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                    Số lượng hiện tại
                </label>
                <input type="number" 
                       value="@Model.Quanlity" 
                       disabled
                       class="w-full px-4 py-2 text-gray-500 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-800">
            </div>
            <div class="mb-4">
                <label for="newQuantity" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                    Số lượng mới <span class="text-red-500">*</span>
                </label>
                <input type="number" 
                       id="newQuantity" 
                       min="0"
                       required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-brand-500">
            </div>
            <div class="flex gap-2">
                <button type="submit"
                        class="flex-1 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                    <i class="mr-2 fas fa-save"></i>
                    Cập nhật
                </button>
                <button type="button" 
                        onclick="closeStockModal()"
                        class="flex-1 px-4 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300">
                    Hủy
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModernValidationScripts");}
    <script>
        function openStockModal() {
            document.getElementById('stockModal').classList.remove('hidden');
            document.getElementById('stockModal').classList.add('flex');
        }

        function closeStockModal() {
            document.getElementById('stockModal').classList.add('hidden');
            document.getElementById('stockModal').classList.remove('flex');
        }

        document.getElementById('stockForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const variantId = document.getElementById('variantId').value;
            const newQuantity = document.getElementById('newQuantity').value;
            
            try {
                const response = await fetch('/Admin/Variant/UpdateStock', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        variantId: parseInt(variantId), 
                        quantity: parseInt(newQuantity) 
                    })
                });
                
                const result = await response.json();
                alert(result.message);
                if (result.success) {
                    location.reload();
                } else {
                    closeStockModal();
                }
            } catch (error) {
                alert('Có lỗi xảy ra: ' + error.message);
            }
        });

        // Close modal on outside click
        document.getElementById('stockModal').addEventListener('click', function(e) {
            if (e.target === this) closeStockModal();
        });
    </script>
}
