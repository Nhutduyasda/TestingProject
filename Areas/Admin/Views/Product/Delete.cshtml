@model MyProject.Models.Shared.Product

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="mb-6">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fas fa-arrow-left"></i>
        <span>Quay lại danh sách</span>
    </a>
</div>

<div class="max-w-2xl">
    <div class="p-6 bg-white border border-red-200 rounded-lg dark:bg-gray-900 dark:border-red-800">
        <div class="flex items-start gap-4 mb-6">
            <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-lg dark:bg-red-900/20">
                <i class="text-xl text-red-600 fas fa-exclamation-triangle dark:text-red-400"></i>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Xác nhận xóa sản phẩm</h1>
                <p class="mt-1 text-sm text-red-600 dark:text-red-400">Hành động này không thể hoàn tác!</p>
            </div>
        </div>

        <div class="p-4 mb-6 border border-gray-200 rounded-lg dark:border-gray-700">
            <div class="flex items-start gap-4">
                @if (Model.Images?.Any() == true)
                {
                    <img src="@Model.Images.First().ImageUrl" alt="@Model.ProductName" 
                         class="object-cover w-24 h-24 border border-gray-200 rounded-lg dark:border-gray-700">
                }
                else
                {
                    <div class="flex items-center justify-center w-24 h-24 bg-gray-200 rounded-lg dark:bg-gray-700">
                        <i class="text-3xl text-gray-400 fas fa-image"></i>
                    </div>
                }
                <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">@Model.ProductName</h3>
                    
                    <div class="mt-3 space-y-2 text-sm">
                        <div class="flex items-center gap-2">
                            <span class="text-gray-500 dark:text-gray-400">ID:</span>
                            <span class="font-medium text-gray-900 dark:text-white">#@Model.ProductId</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-gray-500 dark:text-gray-400">Danh mục:</span>
                            <span class="px-2 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded-full dark:bg-blue-900/20 dark:text-blue-400">
                                @(Model.Category?.CategoryName ?? "N/A")
                            </span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-gray-500 dark:text-gray-400">Nhà cung cấp:</span>
                            <span class="font-medium text-gray-900 dark:text-white">
                                @(Model.Supplier?.SupplierName ?? "N/A")
                            </span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="pt-2 mt-2 border-t border-gray-200 dark:border-gray-700">
                                <p class="text-gray-600 dark:text-gray-400">@Model.Description</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Warning Message -->
        <div class="p-4 mb-6 border-l-4 border-red-500 bg-red-50 dark:bg-red-900/20">
            <div class="flex items-start gap-3">
                <i class="mt-1 text-red-600 fas fa-info-circle dark:text-red-400"></i>
                <div class="text-sm text-red-800 dark:text-red-300">
                    <p class="font-medium mb-2">Cảnh báo:</p>
                    <ul class="space-y-1 list-disc list-inside">
                        <li>Tất cả biến thể của sản phẩm này sẽ bị xóa</li>
                        <li>Các hình ảnh liên quan sẽ bị xóa</li>
                        <li>Lịch sử đơn hàng sẽ không còn thông tin chi tiết về sản phẩm này</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="flex gap-3">
                <button type="submit" 
                        class="flex items-center gap-2 px-6 py-2 text-white transition-colors bg-red-600 rounded-lg hover:bg-red-700">
                    <i class="fas fa-trash"></i>
                    <span>Xác nhận xóa</span>
                </button>
                <a asp-action="Index" 
                   class="flex items-center gap-2 px-6 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    <i class="fas fa-times"></i>
                    <span>Hủy</span>
                </a>
            </div>
        </form>
    </div>
</div>
