@model IEnumerable<MyProject.Models.Shared.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="mb-6">
    <div class="flex flex-col items-start justify-between gap-4 sm:flex-row sm:items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Quản lý sản phẩm</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Danh sách tất cả sản phẩm trong hệ thống</p>
        </div>
        <a asp-action="Create" class="flex items-center gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
            <i class="fas fa-plus"></i>
            <span>Thêm sản phẩm</span>
        </a>
    </div>
</div>

<!-- Filters -->
<div class="p-6 mb-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
    <form method="get" class="grid grid-cols-1 gap-4 md:grid-cols-3">
        <div>
            <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Tìm kiếm</label>
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Tên sản phẩm, mô tả..."
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white">
        </div>
        <div>
            <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Danh mục</label>
            <select name="categoryId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white">
                <option value="">Tất cả danh mục</option>
                @foreach (var category in ViewBag.Categories as List<MyProject.Models.Shared.Categories>)
                {
                    <option value="@category.CategoryId" selected="@(ViewBag.CategoryId == category.CategoryId)">
                        @category.CategoryName
                    </option>
                }
            </select>
        </div>
        <div class="flex items-end gap-2">
            <button type="submit" class="flex items-center justify-center flex-1 gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                <i class="fas fa-search"></i>
                <span>Tìm kiếm</span>
            </button>
            <a asp-action="Index" class="flex items-center justify-center px-4 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                <i class="fas fa-redo"></i>
            </a>
        </div>
    </form>
</div>

<!-- Products Table -->
<div class="overflow-hidden bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-700 dark:text-gray-300">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-800 dark:text-gray-400">
                <tr>
                    <th class="px-6 py-4">ID</th>
                    <th class="px-6 py-4">Sản phẩm</th>
                    <th class="px-6 py-4">Danh mục</th>
                    <th class="px-6 py-4">Nhà cung cấp</th>
                    <th class="px-6 py-4">Số biến thể</th>
                    <th class="px-6 py-4">Tồn kho</th>
                    <th class="px-6 py-4 text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    @foreach (var product in Model)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                            <td class="px-6 py-4 font-medium">
                                #@product.ProductId
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    @if (product.Images?.Any() == true)
                                    {
                                        <img src="@product.Images.First().ImageUrl" alt="@product.ProductName" 
                                             class="object-cover w-12 h-12 border border-gray-200 rounded-lg dark:border-gray-700">
                                    }
                                    else
                                    {
                                        <div class="flex items-center justify-center w-12 h-12 bg-gray-200 rounded-lg dark:bg-gray-700">
                                            <i class="text-gray-400 fas fa-image"></i>
                                        </div>
                                    }
                                    <div>
                                        <p class="font-medium text-gray-900 dark:text-white">@product.ProductName</p>
                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <p class="text-xs text-gray-500 dark:text-gray-400">
                                                @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                                            </p>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded-full dark:bg-blue-900/20 dark:text-blue-400">
                                    @(product.Category?.CategoryName ?? "N/A")
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                @(product.Supplier?.SupplierName ?? "N/A")
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="px-2 py-1 text-xs font-medium text-purple-800 bg-purple-100 rounded-full dark:bg-purple-900/20 dark:text-purple-400">
                                    @(product.Variants?.Count ?? 0) biến thể
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                @{
                                    var totalStock = product.Variants?.Sum(v => v.Quanlity) ?? 0;
                                    var stockClass = totalStock == 0 ? "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400" :
                                                    totalStock <= 10 ? "bg-orange-100 text-orange-800 dark:bg-orange-900/20 dark:text-orange-400" :
                                                    "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400";
                                }
                                <span class="px-2 py-1 text-xs font-medium rounded-full @stockClass">
                                    @totalStock
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-center gap-2">
                                    <a asp-action="Details" asp-route-id="@product.ProductId" 
                                       class="p-2 text-blue-600 transition-colors rounded-lg hover:bg-blue-50 dark:text-blue-400 dark:hover:bg-blue-900/20"
                                       title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@product.ProductId" 
                                       class="p-2 text-green-600 transition-colors rounded-lg hover:bg-green-50 dark:text-green-400 dark:hover:bg-green-900/20"
                                       title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Variant" asp-action="Index" asp-route-productId="@product.ProductId"
                                       class="p-2 text-purple-600 transition-colors rounded-lg hover:bg-purple-50 dark:text-purple-400 dark:hover:bg-purple-900/20"
                                       title="Quản lý biến thể">
                                        <i class="fas fa-list"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.ProductId" 
                                       class="p-2 text-red-600 transition-colors rounded-lg hover:bg-red-50 dark:text-red-400 dark:hover:bg-red-900/20"
                                       title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center justify-center">
                                <i class="mb-3 text-5xl text-gray-300 fas fa-box-open dark:text-gray-600"></i>
                                <p class="text-gray-500 dark:text-gray-400">Không tìm thấy sản phẩm nào</p>
                                <a asp-action="Create" class="mt-4 text-brand-600 hover:text-brand-700 dark:text-brand-400">
                                    <i class="fas fa-plus mr-1"></i> Thêm sản phẩm mới
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model?.Any() == true)
{
    <div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
        Hiển thị <strong>@Model.Count()</strong> sản phẩm
    </div>
}
