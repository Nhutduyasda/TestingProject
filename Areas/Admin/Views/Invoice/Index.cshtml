@model IEnumerable<MyProject.Areas.User.Models.Invoice>
@using MyProject.Areas.Admin.Models

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    var currentStatus = ViewBag.Status as OrderStatus?;
}

<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Quản lý đơn hàng</h1>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Theo dõi và xử lý đơn hàng từ khách hàng</p>
</div>

<!-- Status Filter -->
<div class="mb-6">
    <div class="flex flex-wrap gap-2">
        <a asp-action="Index" 
           class="px-4 py-2 text-sm font-medium transition-colors rounded-lg @(currentStatus == null ? "bg-brand-600 text-white" : "bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-700 dark:hover:bg-gray-700")">
            <i class="mr-2 fas fa-list"></i>
            Tất cả (@Model.Count())
        </a>
        @foreach (OrderStatus status in Enum.GetValues(typeof(OrderStatus)))
        {
            var count = Model.Count(i => i.Status == status);
            <a asp-action="Index" asp-route-status="@status"
               class="px-4 py-2 text-sm font-medium transition-colors rounded-lg @(currentStatus == status ? "bg-brand-600 text-white" : "bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-700 dark:hover:bg-gray-700")">
                <i class="mr-2 @status.ToIconClass()"></i>
                @status.ToDisplayText() (@count)
            </a>
        }
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="p-4 mb-6 text-green-800 bg-green-100 border border-green-200 rounded-lg dark:bg-green-900/20 dark:border-green-800 dark:text-green-400">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

<div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
    @if (Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-800 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Mã đơn</th>
                        <th scope="col" class="px-6 py-3">Khách hàng</th>
                        <th scope="col" class="px-6 py-3">Ngày tạo</th>
                        <th scope="col" class="px-6 py-3">Tổng tiền</th>
                        <th scope="col" class="px-6 py-3">Trạng thái</th>
                        <th scope="col" class="px-6 py-3 text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-800 hover:bg-gray-50 dark:hover:bg-gray-800/50">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                #INV-@invoice.InvoiceId.ToString("D6")
                            </td>
                            <td class="px-6 py-4">
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">@invoice.RecipientName</div>
                                    <div class="text-xs text-gray-500">@invoice.PhoneNumber</div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-xs">
                                    <div>@invoice.CreatedAt.ToString("dd/MM/yyyy")</div>
                                    <div class="text-gray-500">@invoice.CreatedAt.ToString("HH:mm")</div>
                                </div>
                            </td>
                            <td class="px-6 py-4 font-semibold text-brand-600">
                                @invoice.TotalAmount.ToString("N0") đ
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium rounded
                                    @(invoice.Status == OrderStatus.Pending ? "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300" :
                                      invoice.Status == OrderStatus.Confirmed ? "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300" :
                                      invoice.Status == OrderStatus.Shipped ? "bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300" :
                                      invoice.Status == OrderStatus.Completed ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300" :
                                      invoice.Status == OrderStatus.CancelRequested ? "bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300" :
                                      "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300")">
                                    <i class="mr-1 @invoice.Status.ToIconClass()"></i>
                                    @invoice.Status.ToDisplayText()
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a asp-action="Details" asp-route-id="@invoice.InvoiceId"
                                       class="p-2 text-blue-600 transition-colors hover:text-blue-800 dark:text-blue-400"
                                       title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    
                                    @if (invoice.Status == OrderStatus.Pending)
                                    {
                                        <button onclick="confirmOrder(@invoice.InvoiceId)"
                                                class="p-2 text-green-600 transition-colors hover:text-green-800 dark:text-green-400"
                                                title="Xác nhận đơn">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                    
                                    @if (invoice.Status == OrderStatus.Confirmed)
                                    {
                                        <button onclick="markShipped(@invoice.InvoiceId)"
                                                class="p-2 text-purple-600 transition-colors hover:text-purple-800 dark:text-purple-400"
                                                title="Đánh dấu đang giao">
                                            <i class="fas fa-truck"></i>
                                        </button>
                                    }
                                    
                                    @if (invoice.Status == OrderStatus.CancelRequested)
                                    {
                                        <button onclick="approveCancel(@invoice.InvoiceId)"
                                                class="p-2 text-red-600 transition-colors hover:text-red-800 dark:text-red-400"
                                                title="Chấp nhận hủy">
                                            <i class="fas fa-times-circle"></i>
                                        </button>
                                        <button onclick="rejectCancel(@invoice.InvoiceId)"
                                                class="p-2 text-gray-600 transition-colors hover:text-gray-800 dark:text-gray-400"
                                                title="Từ chối hủy">
                                            <i class="fas fa-undo"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="py-12 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 mb-4 rounded-full bg-gray-100 dark:bg-gray-800">
                <i class="text-2xl text-gray-400 fas fa-shopping-cart"></i>
            </div>
            <h3 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">Chưa có đơn hàng nào</h3>
            <p class="text-gray-500 dark:text-gray-400">
                @if (currentStatus.HasValue)
                {
                    @:Không có đơn hàng với trạng thái "@currentStatus.Value.ToDisplayText()"
                }
                else
                {
                    @:Đơn hàng từ khách hàng sẽ hiển thị ở đây
                }
            </p>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModernValidationScripts");}
    <script>
        async function confirmOrder(invoiceId) {
            if (!confirm('Xác nhận đơn hàng này?')) return;
            
            try {
                const response = await fetch('/Admin/Invoice/Confirm', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ invoiceId: invoiceId })
                });
                
                const result = await response.json();
                alert(result.message);
                if (result.success) location.reload();
            } catch (error) {
                alert('Có lỗi xảy ra: ' + error.message);
            }
        }

        async function markShipped(invoiceId) {
            if (!confirm('Đánh dấu đơn hàng đang giao?')) return;
            
            try {
                const response = await fetch('/Admin/Invoice/MarkShipped', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ invoiceId: invoiceId })
                });
                
                const result = await response.json();
                alert(result.message);
                if (result.success) location.reload();
            } catch (error) {
                alert('Có lỗi xảy ra: ' + error.message);
            }
        }

        async function approveCancel(invoiceId) {
            const reason = prompt('Lý do chấp nhận hủy đơn:');
            if (reason === null) return;
            
            try {
                const response = await fetch('/Admin/Invoice/ApproveCancel', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ invoiceId: invoiceId, reason: reason })
                });
                
                const result = await response.json();
                alert(result.message);
                if (result.success) location.reload();
            } catch (error) {
                alert('Có lỗi xảy ra: ' + error.message);
            }
        }

        async function rejectCancel(invoiceId) {
            if (!confirm('Từ chối yêu cầu hủy đơn?')) return;
            
            try {
                const response = await fetch('/Admin/Invoice/RejectCancel', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ invoiceId: invoiceId })
                });
                
                const result = await response.json();
                alert(result.message);
                if (result.success) location.reload();
            } catch (error) {
                alert('Có lỗi xảy ra: ' + error.message);
            }
        }
    </script>
}
