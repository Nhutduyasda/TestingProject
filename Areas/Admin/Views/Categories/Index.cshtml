@model IEnumerable<MyProject.Models.Shared.Categories>

@{
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="mb-6">
    <div class="flex flex-col items-start justify-between gap-4 sm:flex-row sm:items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Quản lý danh mục</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Danh sách tất cả danh mục sản phẩm</p>
        </div>
        <a asp-action="Create" class="flex items-center gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
            <i class="fas fa-plus"></i>
            <span>Thêm danh mục</span>
        </a>
    </div>
</div>

<!-- Categories Grid -->
<div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    @if (Model?.Any() == true)
    {
        @foreach (var category in Model)
        {
            <div class="p-6 transition-shadow bg-white border border-gray-200 rounded-lg hover:shadow-lg dark:bg-gray-900 dark:border-gray-800">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-brand-100 dark:bg-brand-900/20">
                        <i class="text-xl fas fa-tags text-brand-600 dark:text-brand-400"></i>
                    </div>
                    <div class="flex gap-1">
                        <a asp-action="Edit" asp-route-id="@category.CategoryId" 
                           class="p-2 text-green-600 transition-colors rounded-lg hover:bg-green-50 dark:text-green-400 dark:hover:bg-green-900/20"
                           title="Sửa">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@category.CategoryId" 
                           class="p-2 text-red-600 transition-colors rounded-lg hover:bg-red-50 dark:text-red-400 dark:hover:bg-red-900/20"
                           title="Xóa">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
                
                <h3 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">
                    @category.CategoryName
                </h3>
                
                <div class="flex items-center justify-between pt-4 mt-4 border-t border-gray-200 dark:border-gray-700">
                    <div class="text-sm text-gray-600 dark:text-gray-400">
                        <i class="fas fa-box mr-1"></i>
                        @(category.Products?.Count ?? 0) sản phẩm
                    </div>
                    <a asp-action="Details" asp-route-id="@category.CategoryId" 
                       class="text-sm font-medium text-brand-600 hover:text-brand-700 dark:text-brand-400">
                        Chi tiết <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-span-full">
            <div class="flex flex-col items-center justify-center py-12 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
                <i class="mb-3 text-5xl text-gray-300 fas fa-tags dark:text-gray-600"></i>
                <p class="mb-4 text-gray-500 dark:text-gray-400">Chưa có danh mục nào</p>
                <a asp-action="Create" class="flex items-center gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                    <i class="fas fa-plus"></i>
                    <span>Thêm danh mục mới</span>
                </a>
            </div>
        </div>
    }
</div>

@if (Model?.Any() == true)
{
    <div class="mt-6">
        <!-- Summary Stats -->
        <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
            <div class="p-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/20">
                        <i class="fas fa-tags text-blue-600 dark:text-blue-400"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Tổng danh mục</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Count()</p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-100 dark:bg-green-900/20">
                        <i class="fas fa-box text-green-600 dark:text-green-400"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Tổng sản phẩm</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">
                            @Model.Sum(c => c.Products?.Count ?? 0)
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/20">
                        <i class="fas fa-chart-line text-purple-600 dark:text-purple-400"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">TB sản phẩm/danh mục</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">
                            @(Model.Count() > 0 ? (Model.Sum(c => c.Products?.Count ?? 0) / (double)Model.Count()).ToString("F1") : "0")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
