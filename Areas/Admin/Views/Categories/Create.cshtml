@model MyProject.Models.Shared.Categories

@{
    ViewData["Title"] = "Thêm danh mục mới";
}

<div class="mb-6">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fas fa-arrow-left"></i>
        <span>Quay lại danh sách</span>
    </a>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Main Form -->
    <div class="lg:col-span-2">
    <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Thêm danh mục mới</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Tạo danh mục sản phẩm mới</p>
        </div>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="p-4 mb-6 text-red-800 bg-red-100 border border-red-200 rounded-lg dark:bg-red-900/20 dark:border-red-800 dark:text-red-400"></div>

            <div class="space-y-6">
                <!-- Category Name -->
                <div>
                    <label asp-for="CategoryName" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                        Tên danh mục <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="CategoryName" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                           placeholder="Nhập tên danh mục">
                    <span asp-validation-for="CategoryName" class="mt-1 text-sm text-red-600"></span>
                </div>

                <!-- Info Box -->
                <div class="p-4 border-l-4 border-blue-500 bg-blue-50 dark:bg-blue-900/20">
                    <div class="flex items-start gap-3">
                        <i class="mt-1 text-blue-600 fas fa-info-circle dark:text-blue-400"></i>
                        <div class="text-sm text-blue-800 dark:text-blue-300">
                            <p class="font-medium mb-1">Lưu ý:</p>
                            <p>Tên danh mục nên ngắn gọn, dễ hiểu và không trùng lặp với các danh mục hiện có.</p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <button type="submit" 
                            class="flex items-center gap-2 px-6 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                        <i class="fas fa-save"></i>
                        <span>Lưu danh mục</span>
                    </button>
                    <a asp-action="Index" 
                       class="flex items-center gap-2 px-6 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        <i class="fas fa-times"></i>
                        <span>Hủy</span>
                    </a>
                </div>
            </div>
        </form>
    </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
        <div class="sticky top-6 space-y-4">
            <!-- Help Card -->
            <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
                <div class="flex items-center gap-3 mb-4">
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/30">
                        <i class="text-purple-600 fas fa-lightbulb dark:text-purple-400"></i>
                    </div>
                    <h3 class="font-semibold text-gray-900 dark:text-white">Hướng dẫn</h3>
                </div>
                <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-400">
                    <li class="flex items-start gap-2">
                        <i class="mt-1 text-green-500 fas fa-check-circle"></i>
                        <span>Tên ngắn gọn, dễ hiểu</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="mt-1 text-green-500 fas fa-check-circle"></i>
                        <span>Không trùng lặp với danh mục khác</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="mt-1 text-green-500 fas fa-check-circle"></i>
                        <span>Phân loại rõ ràng cho sản phẩm</span>
                    </li>
                </ul>
            </div>

            <!-- Example Card -->
            <div class="p-6 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg text-white">
                <div class="flex items-center gap-3 mb-3">
                    <i class="text-2xl fas fa-folder-open"></i>
                    <div>
                        <p class="text-sm opacity-90">Ví dụ danh mục</p>
                        <p class="text-lg font-bold">Phân loại tốt</p>
                    </div>
                </div>
                <div class="space-y-2 text-sm">
                    <div class="flex items-center gap-2">
                        <i class="fas fa-tag"></i>
                        <span>Thức ăn khô</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <i class="fas fa-tag"></i>
                        <span>Đồ chơi thú cưng</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <i class="fas fa-tag"></i>
                        <span>Phụ kiện chăm sóc</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModernValidationScripts");}
}
