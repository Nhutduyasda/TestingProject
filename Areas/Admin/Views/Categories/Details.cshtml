@model MyProject.Models.Shared.Categories

@{
    ViewData["Title"] = Model.CategoryName;
}

<div class="mb-6">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fas fa-arrow-left"></i>
        <span>Quay lại danh sách</span>
    </a>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Category Info -->
    <div class="lg:col-span-1">
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <div class="flex items-center justify-center w-20 h-20 mx-auto mb-4 rounded-lg bg-brand-100 dark:bg-brand-900/20">
                <i class="text-4xl fas fa-tags text-brand-600 dark:text-brand-400"></i>
            </div>
            
            <h1 class="mb-2 text-2xl font-bold text-center text-gray-900 dark:text-white">@Model.CategoryName</h1>
            <p class="mb-6 text-sm text-center text-gray-500 dark:text-gray-400">Mã danh mục: #@Model.CategoryId</p>
            
            <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-sm text-gray-600 dark:text-gray-400">Tổng sản phẩm</span>
                    <span class="px-3 py-1 text-sm font-semibold text-blue-800 bg-blue-100 rounded-full dark:bg-blue-900/20 dark:text-blue-400">
                        @(Model.Products?.Count ?? 0)
                    </span>
                </div>
            </div>

            <div class="flex gap-2 mt-6">
                <a asp-action="Edit" asp-route-id="@Model.CategoryId" 
                   class="flex items-center justify-center flex-1 gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                    <i class="fas fa-edit"></i>
                    <span>Sửa</span>
                </a>
                <a asp-action="Delete" asp-route-id="@Model.CategoryId" 
                   class="flex items-center justify-center px-4 py-2 text-red-600 transition-colors bg-red-100 rounded-lg hover:bg-red-200 dark:bg-red-900/20 dark:text-red-400">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Products List -->
    <div class="lg:col-span-2">
        <div class="p-6 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-800">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-box text-brand-600"></i>
                    Sản phẩm trong danh mục
                </h2>
                <a asp-area="Admin" asp-controller="Product" asp-action="Create" 
                   class="flex items-center gap-2 px-4 py-2 text-sm text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                    <i class="fas fa-plus"></i>
                    <span>Thêm sản phẩm</span>
                </a>
            </div>

            @if (Model.Products?.Any() == true)
            {
                <div class="space-y-3">
                    @foreach (var product in Model.Products)
                    {
                        <div class="flex items-center justify-between p-4 transition-colors border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                            <div class="flex items-center gap-3">
                                @if (product.Images?.Any() == true)
                                {
                                    <img src="@product.Images.First().ImageUrl" alt="@product.ProductName" 
                                         class="object-cover w-12 h-12 border border-gray-200 rounded-lg dark:border-gray-700">
                                }
                                else
                                {
                                    <div class="flex items-center justify-center w-12 h-12 bg-gray-200 rounded-lg dark:bg-gray-700">
                                        <i class="text-gray-400 fas fa-image"></i>
                                    </div>
                                }
                                <div>
                                    <p class="font-medium text-gray-900 dark:text-white">@product.ProductName</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">
                                        @(product.Variants?.Count ?? 0) biến thể • 
                                        Tồn kho: @(product.Variants?.Sum(v => v.Quanlity) ?? 0)
                                    </p>
                                </div>
                            </div>
                            <div class="flex gap-2">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" 
                                   class="p-2 text-blue-600 transition-colors rounded-lg hover:bg-blue-50 dark:text-blue-400 dark:hover:bg-blue-900/20"
                                   title="Chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" 
                                   class="p-2 text-green-600 transition-colors rounded-lg hover:bg-green-50 dark:text-green-400 dark:hover:bg-green-900/20"
                                   title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="flex flex-col items-center justify-center py-12 border border-gray-200 rounded-lg dark:border-gray-700">
                    <i class="mb-3 text-4xl text-gray-300 fas fa-inbox dark:text-gray-600"></i>
                    <p class="mb-4 text-gray-500 dark:text-gray-400">Chưa có sản phẩm nào trong danh mục này</p>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Create" 
                       class="flex items-center gap-2 px-4 py-2 text-sm text-white transition-colors rounded-lg bg-brand-600 hover:bg-brand-700">
                        <i class="fas fa-plus"></i>
                        <span>Thêm sản phẩm đầu tiên</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
