@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MyProject</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        brand: {
                            50: '#f0f4ff',
                            100: '#e0e9ff',
                            200: '#c7d7fe',
                            300: '#a5b8fc',
                            400: '#818cf8',
                            500: '#6366f1',
                            600: '#465fff',
                            700: '#4338ca',
                            800: '#3730a3',
                            900: '#312e81',
                        }
                    },
                    animation: {
                        'gradient': 'gradient 15s ease infinite',
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        gradient: {
                            '0%, 100%': { 'background-position': '0% 50%' },
                            '50%': { 'background-position': '100% 50%' },
                        },
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-20px)' },
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .animate-gradient-bg {
            background: linear-gradient(-45deg, #a855f7, #ec4899, #6366f1, #a855f7);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
    </style>
</head>
<body class="antialiased bg-white dark:bg-gray-900">
    
    <!-- Dark Mode Toggle -->
    <div class="fixed top-4 right-4 z-50">
        <button onclick="toggleDarkMode()" 
                class="p-3 text-gray-600 transition-all bg-white rounded-lg shadow-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
            <i class="fas fa-moon dark:hidden"></i>
            <i class="hidden fas fa-sun dark:inline"></i>
        </button>
    </div>

    <div class="flex min-h-screen">
        <!-- Left Side: Dynamic Background -->
        <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden animate-gradient-bg items-center justify-center p-12">
            <!-- Decorative Shapes -->
            <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
                <div class="absolute bottom-10 left-10 w-40 h-40 bg-white/10 rounded-full blur-2xl animate-float" style="animation-delay: 1s;"></div>
                <div class="absolute top-20 right-20 w-32 h-32 bg-purple-500/20 rounded-full blur-3xl animate-float" style="animation-delay: 3s;"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float" style="animation-delay: 0s;"></div>
            </div>

            <!-- Content Card -->
            <div class="relative z-10 max-w-lg text-center glass-effect p-10 rounded-3xl shadow-2xl">
                <div class="flex items-center justify-center w-24 h-24 mx-auto mb-6 rounded-2xl bg-white/20 shadow-inner backdrop-blur-md">
                    <i class="text-5xl text-white fas fa-user-plus"></i>
                </div>
                <h2 class="mb-4 text-4xl font-bold text-white">Tham gia cùng chúng tôi!</h2>
                <p class="text-lg text-white/90 leading-relaxed">
                    Tạo tài khoản ngay hôm nay để nhận ưu đãi độc quyền, theo dõi đơn hàng và trải nghiệm mua sắm tuyệt vời nhất.
                </p>
                
                <!-- Benefits List -->
                <div class="mt-8 space-y-4 text-left">
                    <div class="flex items-center gap-4 p-3 rounded-xl bg-white/10 backdrop-blur-sm">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-white/20 text-white">
                            <i class="fas fa-gift"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-white">Ưu đãi thành viên</h4>
                            <p class="text-xs text-white/80">Nhận voucher giảm giá khi đăng ký</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4 p-3 rounded-xl bg-white/10 backdrop-blur-sm">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-white/20 text-white">
                            <i class="fas fa-truck-fast"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-white">Vận chuyển nhanh chóng</h4>
                            <p class="text-xs text-white/80">Theo dõi đơn hàng mọi lúc mọi nơi</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side: Register Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-white dark:bg-gray-900">
            <div class="w-full max-w-md space-y-8">
                <!-- Mobile Logo -->
                <div class="lg:hidden text-center mb-8">
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-xl bg-gradient-to-br from-purple-500 to-pink-600 shadow-lg mb-4">
                        <i class="text-2xl text-white fas fa-user-plus"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">MyProject</h2>
                </div>

                <div class="text-center lg:text-left">
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Tạo tài khoản</h1>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">Điền thông tin bên dưới để đăng ký tài khoản mới.</p>
                </div>

                <!-- Alerts -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="p-4 border-l-4 border-red-500 bg-red-50 dark:bg-red-900/20 rounded-r-lg">
                        <div class="flex items-start gap-3">
                            <i class="mt-1 text-red-600 fas fa-exclamation-circle dark:text-red-400"></i>
                            <div class="text-sm text-red-800 dark:text-red-300">
                                @Html.ValidationSummary(false, "", new { @class = "list-none" })
                            </div>
                        </div>
                    </div>
                }

                <form method="post" asp-action="Register" asp-controller="Account" x-data="{ password: '', confirmPassword: '' }" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <div class="space-y-5">
                        <!-- Username -->
                        <div>
                            <label for="username" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                Tên đăng nhập <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                    <i class="fas fa-user text-gray-400"></i>
                                </div>
                                <input type="text" 
                                       id="username" 
                                       name="username" 
                                       required
                                       autocomplete="username"
                                       class="w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:focus:ring-brand-500"
                                       placeholder="Chọn tên đăng nhập">
                            </div>
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="email" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                Email <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                    <i class="fas fa-envelope text-gray-400"></i>
                                </div>
                                <input type="email" 
                                       id="email" 
                                       name="email" 
                                       required
                                       autocomplete="email"
                                       class="w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:focus:ring-brand-500"
                                       placeholder="example@email.com">
                            </div>
                        </div>

                        <!-- Password -->
                        <div x-data="{ showPassword: false }">
                            <label for="password" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                Mật khẩu <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                    <i class="fas fa-lock text-gray-400"></i>
                                </div>
                                <input :type="showPassword ? 'text' : 'password'" 
                                       id="password" 
                                       name="password" 
                                       x-model="password"
                                       required
                                       autocomplete="new-password"
                                       minlength="6"
                                       class="w-full pl-11 pr-12 py-3 bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:focus:ring-brand-500"
                                       placeholder="Tối thiểu 6 ký tự">
                                <button type="button" 
                                        @@click="showPassword = !showPassword"
                                        class="absolute inset-y-0 right-0 flex items-center px-4 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                                    <i :class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div x-data="{ showConfirmPassword: false }">
                            <label for="confirmPassword" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                Xác nhận mật khẩu <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                    <i class="fas fa-shield-alt text-gray-400"></i>
                                </div>
                                <input :type="showConfirmPassword ? 'text' : 'password'" 
                                       id="confirmPassword" 
                                       name="confirmPassword" 
                                       x-model="confirmPassword"
                                       required
                                       autocomplete="new-password"
                                       minlength="6"
                                       class="w-full pl-11 pr-12 py-3 bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:focus:ring-brand-500"
                                       :class="confirmPassword && password !== confirmPassword ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''"
                                       placeholder="Nhập lại mật khẩu">
                                <button type="button" 
                                        @@click="showConfirmPassword = !showConfirmPassword"
                                        class="absolute inset-y-0 right-0 flex items-center px-4 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                                    <i :class="showConfirmPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                </button>
                            </div>
                            <!-- Password Match Feedback -->
                            <div class="mt-1 h-4">
                                <p x-show="confirmPassword && password !== confirmPassword" 
                                   class="text-xs text-red-600 dark:text-red-400 flex items-center gap-1">
                                    <i class="fas fa-exclamation-triangle"></i> Mật khẩu không khớp
                                </p>
                                <p x-show="confirmPassword && password === confirmPassword" 
                                   class="text-xs text-green-600 dark:text-green-400 flex items-center gap-1">
                                    <i class="fas fa-check-circle"></i> Mật khẩu khớp
                                </p>
                            </div>
                        </div>

                        <!-- Terms -->
                        <div class="flex items-start gap-3">
                            <input type="checkbox" id="terms" required class="w-4 h-4 mt-1 rounded text-brand-600 focus:ring-brand-500 dark:bg-gray-800 dark:border-gray-700">
                            <label for="terms" class="text-sm text-gray-600 dark:text-gray-400">
                                Tôi đồng ý với <a href="#" class="text-brand-600 hover:underline">Điều khoản dịch vụ</a> và <a href="#" class="text-brand-600 hover:underline">Chính sách bảo mật</a>
                            </label>
                        </div>

                        <!-- Register Button -->
                        <button type="submit" 
                                class="w-full px-6 py-3.5 text-white font-medium bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 focus:ring-4 focus:ring-purple-500/20 rounded-xl transition-all shadow-lg shadow-purple-500/30 transform hover:-translate-y-0.5">
                            Đăng ký tài khoản
                        </button>
                    </div>
                </form>

                <!-- Login Link -->
                <p class="text-center text-sm text-gray-600 dark:text-gray-400">
                    Đã có tài khoản? 
                    <a asp-action="Login" class="font-semibold text-brand-600 hover:text-brand-700 dark:text-brand-400 hover:underline">
                        Đăng nhập ngay
                    </a>
                </p>
                
                <!-- Back to Home -->
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" 
                       class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300 transition-colors">
                        <i class="fas fa-arrow-left"></i>
                        <span>Quay về trang chủ</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Dark Mode Toggle
        function toggleDarkMode() {
            if (localStorage.theme === 'dark') {
                localStorage.theme = 'light';
                document.documentElement.classList.remove('dark');
            } else {
                localStorage.theme = 'dark';
                document.documentElement.classList.add('dark');
            }
        }

        // Initialize dark mode based on localStorage
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>
</html>
