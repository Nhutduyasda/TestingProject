@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MyProject</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        brand: {
                            50: '#f0f4ff',
                            100: '#e0e9ff',
                            200: '#c7d7fe',
                            300: '#a5b8fc',
                            400: '#818cf8',
                            500: '#6366f1',
                            600: '#465fff',
                            700: '#4338ca',
                            800: '#3730a3',
                            900: '#312e81',
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="antialiased bg-gradient-to-br from-brand-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-900 dark:to-gray-800">
    
    <!-- Dark Mode Toggle -->
    <div class="fixed top-4 right-4 z-50">
        <button onclick="toggleDarkMode()" 
                class="p-3 text-gray-600 transition-all bg-white rounded-lg shadow-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
            <i class="fas fa-moon dark:hidden"></i>
            <i class="hidden fas fa-sun dark:inline"></i>
        </button>
    </div>

    <div class="flex items-center justify-center min-h-screen p-4 py-12">
        <div class="w-full max-w-md">
            
            <!-- Logo & Welcome -->
            <div class="mb-8 text-center">
                <div class="flex items-center justify-center w-20 h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-600 shadow-xl">
                    <i class="text-3xl text-white fas fa-user-plus"></i>
                </div>
                <h1 class="mb-2 text-3xl font-bold text-gray-900 dark:text-white">Tạo tài khoản mới</h1>
                <p class="text-gray-600 dark:text-gray-400">Đăng ký để trải nghiệm MyProject</p>
            </div>

            <!-- Register Form -->
            <div class="p-8 bg-white border border-gray-200 shadow-2xl backdrop-blur-sm rounded-2xl dark:bg-gray-800/50 dark:border-gray-700">
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="p-4 mb-6 border-l-4 border-red-500 bg-red-50 dark:bg-red-900/20">
                        <div class="flex items-start gap-3">
                            <i class="mt-1 text-red-600 fas fa-exclamation-circle dark:text-red-400"></i>
                            <div class="text-sm text-red-800 dark:text-red-300">
                                @Html.ValidationSummary(false, "", new { @class = "list-none" })
                            </div>
                        </div>
                    </div>
                }

                <form method="post" asp-action="Register" asp-controller="Account" x-data="{ password: '', confirmPassword: '' }">
                    @Html.AntiForgeryToken()

                    <div class="space-y-5">
                        <!-- Username -->
                        <div>
                            <label for="username" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                <i class="mr-1 fas fa-user text-brand-600 dark:text-brand-400"></i>
                                Tên đăng nhập <span class="text-red-500">*</span>
                            </label>
                            <input type="text" 
                                   id="username" 
                                   name="username" 
                                   required
                                   autocomplete="username"
                                   class="w-full px-4 py-3 transition-all border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-brand-500"
                                   placeholder="Chọn tên đăng nhập duy nhất">
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                <i class="fas fa-info-circle"></i> Tên đăng nhập sẽ được dùng để đăng nhập
                            </p>
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="email" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                <i class="mr-1 fas fa-envelope text-brand-600 dark:text-brand-400"></i>
                                Email <span class="text-red-500">*</span>
                            </label>
                            <input type="email" 
                                   id="email" 
                                   name="email" 
                                   required
                                   autocomplete="email"
                                   class="w-full px-4 py-3 transition-all border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-brand-500"
                                   placeholder="example@email.com">
                        </div>

                        <!-- Password -->
                        <div x-data="{ showPassword: false }">
                            <label for="password" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                <i class="mr-1 fas fa-lock text-brand-600 dark:text-brand-400"></i>
                                Mật khẩu <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input :type="showPassword ? 'text' : 'password'" 
                                       id="password" 
                                       name="password" 
                                       x-model="password"
                                       required
                                       autocomplete="new-password"
                                       minlength="6"
                                       class="w-full px-4 py-3 pr-12 transition-all border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-brand-500"
                                       placeholder="Tối thiểu 6 ký tự">
                                <button type="button" 
                                        @@click="showPassword = !showPassword"
                                        class="absolute inset-y-0 right-0 flex items-center px-4 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                                    <i :class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                </button>
                            </div>
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                <i class="fas fa-shield-alt"></i> Mật khẩu phải có ít nhất 6 ký tự
                            </p>
                        </div>

                        <!-- Confirm Password -->
                        <div x-data="{ showConfirmPassword: false }">
                            <label for="confirmPassword" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                <i class="mr-1 fas fa-lock text-brand-600 dark:text-brand-400"></i>
                                Xác nhận mật khẩu <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input :type="showConfirmPassword ? 'text' : 'password'" 
                                       id="confirmPassword" 
                                       name="confirmPassword" 
                                       x-model="confirmPassword"
                                       required
                                       autocomplete="new-password"
                                       minlength="6"
                                       class="w-full px-4 py-3 pr-12 transition-all border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-brand-500"
                                       :class="confirmPassword && password !== confirmPassword ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''"
                                       placeholder="Nhập lại mật khẩu">
                                <button type="button" 
                                        @@click="showConfirmPassword = !showConfirmPassword"
                                        class="absolute inset-y-0 right-0 flex items-center px-4 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                                    <i :class="showConfirmPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                </button>
                            </div>
                            <p x-show="confirmPassword && password !== confirmPassword" 
                               class="mt-1 text-xs text-red-600 dark:text-red-400">
                                <i class="fas fa-exclamation-triangle"></i> Mật khẩu xác nhận không khớp
                            </p>
                            <p x-show="confirmPassword && password === confirmPassword" 
                               class="mt-1 text-xs text-green-600 dark:text-green-400">
                                <i class="fas fa-check-circle"></i> Mật khẩu khớp
                            </p>
                        </div>

                        <!-- Terms & Conditions -->
                        <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-xl dark:bg-gray-700/50">
                            <input type="checkbox" 
                                   id="terms" 
                                   required
                                   class="w-4 h-4 mt-1 rounded text-brand-600 focus:ring-brand-500 dark:bg-gray-700 dark:border-gray-600">
                            <label for="terms" class="text-sm text-gray-600 cursor-pointer dark:text-gray-400">
                                Tôi đồng ý với 
                                <a href="#" class="font-medium transition-colors text-brand-600 hover:text-brand-700 dark:text-brand-400">Điều khoản dịch vụ</a> 
                                và 
                                <a href="#" class="font-medium transition-colors text-brand-600 hover:text-brand-700 dark:text-brand-400">Chính sách bảo mật</a>
                            </label>
                        </div>

                        <!-- Register Button -->
                        <button type="submit" 
                                class="flex items-center justify-center w-full gap-2 px-6 py-3 text-white transition-all shadow-lg bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl hover:from-purple-700 hover:to-pink-700 hover:shadow-xl">
                            <i class="fas fa-user-plus"></i>
                            <span class="font-medium">Đăng ký tài khoản</span>
                        </button>

                        <!-- Benefits -->
                        <div class="p-4 border border-green-200 bg-green-50 rounded-xl dark:bg-green-900/10 dark:border-green-800">
                            <div class="flex items-center gap-2 mb-2">
                                <i class="text-green-600 fas fa-gift dark:text-green-400"></i>
                                <span class="text-sm font-medium text-green-800 dark:text-green-300">Lợi ích khi đăng ký:</span>
                            </div>
                            <ul class="space-y-1 text-xs text-green-700 dark:text-green-300">
                                <li class="flex items-center gap-2">
                                    <i class="text-green-600 fas fa-check-circle"></i>
                                    Quản lý đơn hàng dễ dàng
                                </li>
                                <li class="flex items-center gap-2">
                                    <i class="text-green-600 fas fa-check-circle"></i>
                                    Theo dõi lịch sử mua hàng
                                </li>
                                <li class="flex items-center gap-2">
                                    <i class="text-green-600 fas fa-check-circle"></i>
                                    Nhận thông báo khuyến mãi sớm nhất
                                </li>
                            </ul>
                        </div>

                        <!-- Login Link -->
                        <div class="pt-4 text-center border-t border-gray-200 dark:border-gray-700">
                            <p class="text-sm text-gray-600 dark:text-gray-400">
                                Đã có tài khoản? 
                                <a asp-action="Login" 
                                   class="font-medium transition-colors text-brand-600 hover:text-brand-700 dark:text-brand-400 dark:hover:text-brand-300">
                                    Đăng nhập ngay
                                </a>
                            </p>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Back to Home -->
            <div class="mt-6 text-center">
                <a asp-controller="Home" asp-action="Index" 
                   class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
                    <i class="fas fa-home"></i>
                    <span>Quay về trang chủ</span>
                </a>
            </div>
        </div>
    </div>

    <script>
        // Dark Mode Toggle
        function toggleDarkMode() {
            if (localStorage.theme === 'dark') {
                localStorage.theme = 'light';
                document.documentElement.classList.remove('dark');
            } else {
                localStorage.theme = 'dark';
                document.documentElement.classList.add('dark');
            }
        }

        // Initialize dark mode based on localStorage
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>
</html>
