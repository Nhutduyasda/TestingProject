@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MyProject</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        brand: {
                            50: '#f0f4ff',
                            100: '#e0e9ff',
                            200: '#c7d7fe',
                            300: '#a5b8fc',
                            400: '#818cf8',
                            500: '#6366f1',
                            600: '#465fff',
                            700: '#4338ca',
                            800: '#3730a3',
                            900: '#312e81',
                        }
                    },
                    animation: {
                        'gradient': 'gradient 15s ease infinite',
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        gradient: {
                            '0%, 100%': { 'background-position': '0% 50%' },
                            '50%': { 'background-position': '100% 50%' },
                        },
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-20px)' },
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .animate-gradient-bg {
            background: linear-gradient(-45deg, #6366f1, #a855f7, #ec4899, #6366f1);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
    </style>
</head>
<body class="antialiased bg-white dark:bg-gray-900">
    
    <!-- Dark Mode Toggle -->
    <div class="fixed top-4 right-4 z-50">
        <button onclick="toggleDarkMode()" 
                class="p-3 text-gray-600 transition-all bg-white rounded-lg shadow-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
            <i class="fas fa-moon dark:hidden"></i>
            <i class="hidden fas fa-sun dark:inline"></i>
        </button>
    </div>

    <div class="flex min-h-screen">
        <!-- Left Side: Dynamic Background -->
        <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden animate-gradient-bg items-center justify-center p-12">
            <!-- Decorative Shapes -->
            <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
                <div class="absolute top-10 left-10 w-32 h-32 bg-white/10 rounded-full blur-2xl animate-float" style="animation-delay: 0s;"></div>
                <div class="absolute bottom-20 right-20 w-48 h-48 bg-purple-500/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-pink-500/10 rounded-full blur-3xl animate-float" style="animation-delay: 4s;"></div>
            </div>

            <!-- Content Card -->
            <div class="relative z-10 max-w-lg text-center glass-effect p-10 rounded-3xl shadow-2xl">
                <div class="flex items-center justify-center w-24 h-24 mx-auto mb-6 rounded-2xl bg-white/20 shadow-inner backdrop-blur-md">
                    <i class="text-5xl text-white fas fa-shopping-bag"></i>
                </div>
                <h2 class="mb-4 text-4xl font-bold text-white">Chào mừng trở lại!</h2>
                <p class="text-lg text-white/90 leading-relaxed">
                    Khám phá hàng ngàn sản phẩm chất lượng cao với giá tốt nhất. Đăng nhập để tiếp tục hành trình mua sắm của bạn.
                </p>
                
                <!-- Stats or Features -->
                <div class="grid grid-cols-3 gap-4 mt-8 pt-8 border-t border-white/20">
                    <div>
                        <div class="text-2xl font-bold text-white">1+</div>
                        <div class="text-xs text-white/80">Sản phẩm</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-white">24/7</div>
                        <div class="text-xs text-white/80">Hỗ trợ</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-white">100%</div>
                        <div class="text-xs text-white/80">Uy tín</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-white dark:bg-gray-900">
            <div class="w-full max-w-md space-y-8">
                <div class="lg:hidden text-center mb-8">
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-xl bg-gradient-to-br from-brand-500 to-purple-600 shadow-lg mb-4">
                        <i class="text-2xl text-white fas fa-shopping-bag"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">MyProject</h2>
                </div>

                <div class="text-center lg:text-left">
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Đăng nhập</h1>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">Nhập thông tin đăng nhập của bạn để truy cập.</p>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="p-4 border-l-4 border-red-500 bg-red-50 dark:bg-red-900/20 rounded-r-lg">
                        <div class="flex items-start gap-3">
                            <i class="mt-1 text-red-600 fas fa-exclamation-circle dark:text-red-400"></i>
                            <div class="text-sm text-red-800 dark:text-red-300">
                                @Html.ValidationSummary(false, "", new { @class = "list-none" })
                            </div>
                        </div>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="p-4 border-l-4 border-green-500 bg-green-50 dark:bg-green-900/20 rounded-r-lg">
                        <div class="flex items-start gap-3">
                            <i class="mt-1 text-green-600 fas fa-check-circle dark:text-green-400"></i>
                            <div class="text-sm text-green-800 dark:text-green-300">
                                @TempData["SuccessMessage"]
                            </div>
                        </div>
                    </div>
                }

                <form method="post" asp-action="Login" asp-controller="Account" class="space-y-6">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div class="space-y-5">
                            <div>
                            <label for="username" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                Tên đăng nhập
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                    <i class="fas fa-user text-gray-400"></i>
                                </div>
                                <input type="text" 
                                       id="username" 
                                       name="username" 
                                       required
                                       autocomplete="username"
                                       class="w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:focus:ring-brand-500"
                                       placeholder="Nhập tên đăng nhập">
                            </div>
                        </div>

                        <div x-data="{ showPassword: false }">
                            <div class="flex items-center justify-between mb-2">
                                <label for="password" class="text-sm font-medium text-gray-700 dark:text-gray-300">
                                    Mật khẩu
                                </label>
                                <a href="#" class="text-sm font-medium text-brand-600 hover:text-brand-700 dark:text-brand-400 dark:hover:text-brand-300">
                                    Quên mật khẩu?
                                </a>
                            </div>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                    <i class="fas fa-lock text-gray-400"></i>
                                </div>
                                <input :type="showPassword ? 'text' : 'password'" 
                                       id="password" 
                                       name="password" 
                                       required
                                       autocomplete="current-password"
                                       class="w-full pl-11 pr-12 py-3 bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:focus:ring-brand-500"
                                       placeholder="Nhập mật khẩu">
                                <button type="button" 
                                        @@click="showPassword = !showPassword"
                                        class="absolute inset-y-0 right-0 flex items-center px-4 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                                    <i :class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                </button>
                            </div>
                        </div>

                        <div class="flex items-center">
                            <input type="checkbox" id="remember" class="w-4 h-4 rounded text-brand-600 focus:ring-brand-500 dark:bg-gray-800 dark:border-gray-700">
                            <label for="remember" class="ml-2 text-sm text-gray-600 dark:text-gray-400">Ghi nhớ đăng nhập</label>
                        </div>
                        <button type="submit" 
                                class="w-full px-6 py-3.5 text-white font-medium bg-brand-600 hover:bg-brand-700 focus:ring-4 focus:ring-brand-500/20 rounded-xl transition-all shadow-lg shadow-brand-500/30 transform hover:-translate-y-0.5">
                            Đăng nhập
                        </button>
                    </div>
                </form>
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 text-gray-500 bg-white dark:bg-gray-900 dark:text-gray-400">Hoặc tiếp tục với</span>
                    </div>
                </div>
                <div class="grid grid-cols-1 gap-3">
                    <a asp-action="GoogleLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]"
                       class="flex items-center justify-center gap-3 px-6 py-3 transition-all bg-white border border-gray-200 rounded-xl hover:bg-gray-50 hover:border-gray-300 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 dark:text-white group">
                        <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="w-5 h-5 transition-transform group-hover:scale-110" alt="Google">
                        <span class="font-medium text-gray-700 dark:text-gray-200">Google</span>
                    </a>
                </div>
                <p class="text-center text-sm text-gray-600 dark:text-gray-400">
                    Chưa có tài khoản? 
                    <a asp-action="Register" class="font-semibold text-brand-600 hover:text-brand-700 dark:text-brand-400 hover:underline">
                        Đăng ký miễn phí
                    </a>
                </p>                

                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" 
                       class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300 transition-colors">
                        <i class="fas fa-arrow-left"></i>
                        <span>Quay về trang chủ</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Dark Mode Toggle
        function toggleDarkMode() {
            if (localStorage.theme === 'dark') {
                localStorage.theme = 'light';
                document.documentElement.classList.remove('dark');
            } else {
                localStorage.theme = 'dark';
                document.documentElement.classList.add('dark');
            }
        }
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>
</html>
