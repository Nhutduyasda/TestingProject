@{
    ViewData["Title"] = "Đặt hàng thành công";
    var invoiceId = ViewBag.InvoiceId;
}

<div class="flex flex-col items-center justify-center min-h-[60vh] py-12 text-center">
    <div class="w-24 h-24 mb-6 bg-green-100 rounded-full flex items-center justify-center dark:bg-green-900/20 animate-bounce">
        <i class="text-5xl text-green-600 fas fa-check dark:text-green-400"></i>
    </div>

    <h1 class="mb-4 text-4xl font-bold text-gray-900 dark:text-white">
        Đặt hàng thành công!
    </h1>
    
    <p class="max-w-md mb-8 text-lg text-gray-600 dark:text-gray-400">
        Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đã được tiếp nhận và đang chờ xử lý.
    </p>

    @if (invoiceId != null)
    {
        <div class="p-4 mb-8 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
            <p class="text-sm text-gray-500 dark:text-gray-400">Mã đơn hàng</p>
            <p class="text-2xl font-bold text-brand-600 dark:text-brand-400">#@invoiceId</p>
        </div>
    }

    <div class="flex flex-col gap-4 sm:flex-row">
        @if (invoiceId != null)
        {
            <a asp-area="User" asp-controller="Orders" asp-action="Details" asp-route-id="@invoiceId"
               class="px-8 py-3 text-white transition-all shadow-lg rounded-xl bg-brand-600 hover:bg-brand-700 hover:shadow-xl">
                <i class="mr-2 fas fa-file-invoice"></i>
                Xem chi tiết đơn hàng
            </a>
        }
        
        <a asp-controller="Home" asp-action="Index"
           class="px-8 py-3 text-gray-700 transition-all bg-white border border-gray-300 shadow-sm rounded-xl hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700">
            <i class="mr-2 fas fa-shopping-bag"></i>
            Tiếp tục mua sắm
        </a>
    </div>
</div>
